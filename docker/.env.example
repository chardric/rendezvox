# ==========================================================
# iRadio — Environment Variables
# ==========================================================
# Quick start (auto-generates all passwords):
#   bash setup.sh && docker compose up -d
#
# Manual setup (if you prefer custom passwords):
#   cp .env.example .env   # then edit passwords
#   docker compose up -d
# ==========================================================

# ── PostgreSQL ───────────────────────────────────────────
POSTGRES_DB=iradio
POSTGRES_USER=iradio
POSTGRES_PASSWORD=         # REQUIRED — set a strong password

# ── Icecast ──────────────────────────────────────────────
ICECAST_SOURCE_PASSWORD=   # REQUIRED — used by Liquidsoap to stream to Icecast
ICECAST_RELAY_PASSWORD=    # Optional — for relay servers
ICECAST_ADMIN_PASSWORD=    # REQUIRED — Icecast admin panel password
ICECAST_ADMIN_USER=admin
ICECAST_HOSTNAME=localhost
ICECAST_MAX_CLIENTS=100
ICECAST_MAX_SOURCES=3

# ── Application ─────────────────────────────────────────
IRADIO_APP_ENV=production
IRADIO_APP_DEBUG=false
IRADIO_ICECAST_MOUNT=/live
IRADIO_JWT_SECRET=         # Optional — auto-derived from DB password if empty
IRADIO_INTERNAL_SECRET=   # Auto-generated — shared secret for Liquidsoap → API
TZ=UTC

# ── Host Port Overrides ─────────────────────────────────
IRADIO_HTTP_PORT=80
IRADIO_ICECAST_PUBLIC_PORT=8000
